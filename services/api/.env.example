# RDP API Environment Variables

# Server Configuration
RDP_ENV=development
RDP_SERVER_HOST=0.0.0.0
RDP_API_PORT=8080
RDP_READ_TIMEOUT=30s
RDP_WRITE_TIMEOUT=30s

# Database Configuration
RDP_DB_HOST=localhost
RDP_DB_PORT=5432
RDP_DB_USER=rdp_user
RDP_DB_PASSWORD=rdp_password
RDP_DB_NAME=rdp_db
RDP_DB_SSLMODE=disable

# JWT Configuration
RDP_JWT_SECRET=your-secret-key-change-in-production
RDP_ACCESS_TOKEN_TTL=2h
RDP_REFRESH_TOKEN_TTL=168h
RDP_JWT_ISSUER=rdp-api
RDP_JWT_AUDIENCE=rdp-users

# Log Configuration
RDP_LOG_LEVEL=info
RDP_LOG_FORMAT=json
RDP_LOG_OUTPUT=stdout
